                      required/>
                  </div>
                  <div class="form-group" required>
                    <input
                      type="tel"
                      name="phone"
                      placeholder="Phone Number i.e 08099999999"
                      class="form-control"
                      required/>
                  </div>
                  <div class="form-group d-flex" required>
                    <input
                      size="50" 
                      onBlur="storename_validation();"
                      type="text"
                      name="storename"
                      placeholder="myshop"
                      class="form-control"
                      required/><span id="name_err"></span>
                    <h6 class="mt-2">.gomarkt.store</h6>
                  </div>
                  <div class="form-group">
                    <input
                      type="text"
                      name="address"
                      placeholder="Business Address"
                      class="form-control"
                      required/>
                  </div>
  
                  <div class="row justify-content-center my-2 px-2">
